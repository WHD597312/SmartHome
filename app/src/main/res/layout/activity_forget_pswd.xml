<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistActivity"
    android:background="#34332f"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#494948"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentTop="true"
            android:src="@mipmap/nav_backmdpi"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/tv_regist_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_back"
            android:layout_alignTop="@+id/image_back"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18"
            android:text="重置密码" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_120"
        android:ems="10"
        android:hint="手机号码"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center_vertical"
        android:background="@null"
        android:textSize="@dimen/dp_18"
        android:inputType="phone"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_phone"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="验证码"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/dp_18" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/et_code"
        android:background="@color/white"
        android:layout_alignLeft="@+id/et_code"
        android:layout_alignRight="@id/et_code"
        android:layout_marginTop="@dimen/dp_5"
        />

    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_toRightOf="@+id/et_code"
        android:layout_alignRight="@+id/et_phone"
        android:textColor="@color/color_orange"
        android:layout_centerVertical="true"
        android:layout_alignTop="@id/et_code"
        android:layout_alignBottom="@id/view2"
        android:background="@drawable/button_normal"
        android:text="点击获取"
        />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_alignRight="@+id/et_phone"
        android:layout_marginBottom="@dimen/dp_35"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:background="@drawable/shape_btn_next"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_alignRight="@+id/et_phone"
        android:layout_below="@id/et_code"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="设置密码"
        android:textColorHint="@color/white"
         />
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_password"
        android:background="@color/white"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignRight="@+id/et_password"
        android:layout_marginTop="@dimen/dp_5"
        />


</RelativeLayout>