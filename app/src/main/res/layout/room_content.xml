<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:Android="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_47"
        android:background="#3D3C38"
        tools:ignore="InvalidId">

        <ImageButton
            android:id="@+id/return_scene"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#3D3C38"
            android:src="@drawable/nav_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:layout_centerVertical="true"
            android:text="主卧"/>
        <ImageButton
            android:id="@+id/return_homepage"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:background="#3D3C38"
            android:layout_alignParentRight="true"
            android:src="@drawable/homepage"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl3"
        android:layout_below="@+id/rl1">
        <ImageView
            android:id="@+id/background"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:maxHeight="5000dp"
            android:maxWidth="1080dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bedroom1"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15">
                <TextView
                    android:id="@+id/extTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""/>
                <TextView
                    android:id="@+id/extHut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""/>
            </LinearLayout>
        </RelativeLayout>

        <com.xinrui.secen.scene.scene_view_custom.DragImageView
            android:id="@+id/dragGridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </com.xinrui.secen.scene.scene_view_custom.DragImageView>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/x37">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/btn_smileldpi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:text="您的猪窝需要美化哦"
            android:layout_toRightOf="@id/imageView"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/change_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_scene"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>