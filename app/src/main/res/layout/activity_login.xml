<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_back"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">


    <TextView
        android:id="@+id/tv_register"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentTop="true"
        android:text="注册"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@mipmap/logo"
        android:scaleType="centerInside"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="-100dp"
        >

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textColorHint="@color/white"
            android:inputType="phone"
            android:hint="用户名"
            />

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:src="@mipmap/name"
            android:scaleType="centerInside"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white"
            android:layout_below="@+id/et_name"
            android:layout_alignLeft="@id/et_name"
            android:layout_alignRight="@id/image_user"
            />

        <EditText
            android:id="@+id/et_pswd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/view1"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:hint="密码"
            android:background="@null"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/image_pswd"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@id/view1"
            android:layout_alignParentRight="true"
            android:src="@mipmap/password"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_alignBottom="@id/et_pswd"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white"
            android:layout_below="@+id/et_pswd"
            android:layout_alignLeft="@id/et_name"
            android:layout_alignRight="@id/image_user"
            />
        <TextView
            android:id="@+id/tv_update"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/view2"
            android:text="更新查看"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_forget_pswd"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view2"
            android:text="忘记密码?"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center" />


    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:text="立即登录"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/shape_btn_login"
        />



</RelativeLayout>