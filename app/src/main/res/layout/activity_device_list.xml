<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#312728"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#312728"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:id="@+id/relative"
            >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/image_back"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_centerVertical="true"
                 />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:text="办公室"
                android:textSize="@dimen/sp_20"
                />
            <ImageView
                android:id="@+id/image_home"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/image_home"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_6"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/relative"
            android:background="#312728"
            >
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                >

                <Button
                    android:id="@+id/btn_cancle"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center"
                    android:background="@drawable/button_normal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:text="@string/cancle" />

                <TextView
                    android:id="@+id/tv_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/btn_cancle"
                    android:layout_alignTop="@+id/btn_cancle"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/clock_set" />

                <Button
                    android:id="@+id/btn_ensure"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignBottom="@+id/btn_cancle"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/btn_cancle"
                    android:gravity="center"
                    android:background="@drawable/button_normal"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:text="@string/ensure" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/btn_cancle"
                    android:layout_alignStart="@+id/btn_cancle"
                    android:layout_below="@+id/btn_cancle"
                    android:theme="@android:style/Theme.Holo.Light"
                    android:calendarViewShown="false"
                    />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/btn_ensure"
                    android:layout_alignRight="@+id/btn_ensure"
                    android:layout_below="@+id/btn_cancle"
                    android:layout_toRightOf="@+id/datePicker"
                    android:theme="@android:style/Theme.Holo.Light"
                    android:timePickerMode="spinner" />
            </RelativeLayout>
        </LinearLayout>
        <GridView
            android:id="@+id/gradView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:verticalSpacing="@dimen/dp_2"
            android:horizontalSpacing="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:background="#312728"
            />
    </RelativeLayout>
</LinearLayout>