<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.device.ShareDeviceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/color_blank2"
            android:layout_height="@dimen/dp_60">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/image_back"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:text="@string/share_device"
                android:textSize="@dimen/sp_20"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_name"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/relative"
            />
        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_device_name"
            android:textSize="@dimen/sp_18"
            android:layout_toRightOf="@+id/tv_device_name"
            android:text="名称" />
        <TextView
            android:id="@+id/tv_device_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="固件版本:"
            android:layout_centerVertical="true"
            android:layout_below="@+id/tv_device_name"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            />


        <TextView
            android:id="@+id/tv_version"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_device_version"
            android:layout_below="@+id/tv_device_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_device_version"
            android:text="1.0"
            android:textSize="@dimen/sp_18" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignTop="@+id/tv_version"
            android:layout_below="@+id/tv_device_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_version"
            android:background="@color/white"
            android:text="版本升级"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_orange" />
        <ImageView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/tv_device_version"
            android:id="@+id/img_qrCode"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_180"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>