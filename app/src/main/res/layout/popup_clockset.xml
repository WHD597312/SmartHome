<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#1A1414"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/light_left"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:src="@mipmap/light_left" />

            <com.xinrui.secen.scene_view_custom.MySeekBar
                android:id="@+id/beautySeekBar1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_toRightOf="@+id/light_left"
                android:max="37"
                android:progress="0"
                android:progressDrawable="@drawable/bg_seekbar_progress_drawable"
                android:thumb="@null"
                app:textBackground="@mipmap/ld_yuan"
                app:textColor2="@color/white"
                app:textOrientation="top"
                app:textSize2="1sp" />

            <ImageView
                android:id="@+id/light_right"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ligth_right" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>