<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smart.activity.MainControlActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:background="@color/color_gray"
            >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/back"
                android:layout_marginLeft="@dimen/dp_6"
                />

            <TextView
                android:id="@+id/tv_main_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/main_set"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/btn_ensure"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_main_device"
                android:textSize="@dimen/sp_14"
                android:background="@drawable/selector_btn_ensure"
                android:text="@string/ensure"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_26"
            android:text="XXæˆ¿ >"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_white"
            android:background="@color/color_dark_green"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            />
        <LinearLayout
            android:id="@+id/linearout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
