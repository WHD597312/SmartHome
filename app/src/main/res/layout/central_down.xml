<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/custom_house_type"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:textColor="@color/custom_house_button_colir"
            android:background="@drawable/addroom_button"
            android:layout_alignParentLeft="true"
            android:text="@string/custom_house_type" />
        <Button
            android:id="@+id/copy_and_paste"
            android:layout_width="@dimen/dp_94.5"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/addroom_button"
            android:layout_toRightOf="@+id/custom_house_type"
            android:text="@string/cope_and_paste" />
        <ImageButton
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/copy_and_paste"
            android:background="@color/read"
            android:scaleType="fitCenter"
            android:src="@drawable/equipment_btn_del"/>
    </RelativeLayout>
</RelativeLayout>