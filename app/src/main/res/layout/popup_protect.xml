<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearout2"

    >

        <RelativeLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            >

            <ImageView
                android:id="@+id/temp_decrease"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/protect_temp_decrease"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                />

            <com.xinrui.smart.view_custom.MySeekBar2
                android:id="@+id/mySeekBarPro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="12"
                android:progress="7"
                android:progressDrawable="@drawable/bg_seekbar_progress_drawable2"
                android:layout_toRightOf="@+id/temp_decrease"
                android:layout_marginRight="@dimen/dp_56"
                android:thumb="@null"
                app:textBackground="@mipmap/seek_protect2"
                app:textColor2="@color/white"
                app:textOrientation="top"
                app:textSize2="@dimen/sp_13"
                />
            <ImageView
                android:id="@+id/temp_add"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:src="@mipmap/protect_temp_add"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
</LinearLayout>