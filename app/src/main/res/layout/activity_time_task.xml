<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#312728"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:id="@+id/relative"
        android:background="#494948"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/nav_backmdpi"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:text="定时任务"
            android:textSize="@dimen/sp_20"
            
            />
        <ImageView
            android:id="@+id/btn_publish"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/nav_home"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/dp_8"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:text="@string/cancle"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/button_normal"
            />

        <Button
            android:id="@+id/btn_copy"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:text="@string/copy"
            android:textSize="@dimen/sp_14"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            />

        <LinearLayout
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/btn_cancle"
            android:layout_toLeftOf="@+id/btn_copy"
            android:layout_marginLeft="@dimen/dp_8"
            android:numColumns="7"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_mon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="一"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_tue"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="二"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_wen"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="三"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_thu"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="四"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_fri"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="五"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_sta"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="六"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_sun"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:text="日"
                android:textSize="@dimen/sp_14"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        >
        <com.xinrui.smart.view_custom.CircleSeekBar
            android:id="@+id/seekbar"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:wheel_pointer_radius="8dp"
            app:wheel_reached_width="20dp"
            app:wheel_unreached_width="25dp"
            android:layout_centerInParent="true"
            app:wheel_max_process="24"
            />
        <TextClock
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="sssss"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/btn_cancle2"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:background="@drawable/button_normal"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/black"
                android:text="@string/cancle" />

            <TextView
                android:id="@+id/tv_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_cancle2"
                android:layout_alignTop="@+id/btn_cancle2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/clock_set" />

            <Button
                android:id="@+id/btn_ensure2"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_alignBottom="@+id/btn_cancle2"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/btn_cancle2"
                android:gravity="center"
                android:background="@drawable/button_normal"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/color_black"
                android:text="@string/ensure" />
            <com.weigan.loopview.LoopView
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_cancle2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
            <com.weigan.loopview.LoopView
                android:id="@+id/numberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_cancle2"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        >
        <TextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/open_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_open"
            android:gravity="center"
            android:background="@null"
            android:text="0:00"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/color_orange" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/open_time"
            android:layout_alignTop="@id/tv_open"
            android:textColor="@color/color_white"
            android:text="@string/close"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/close_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_close"
            android:text="1:00"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/color_orange"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/close_time"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:text="@string/temp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_temp_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_temp"
            android:text="5℃"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_orange"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_white_button"
            android:gravity="center"
            android:text="@string/add" />
    </RelativeLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        />
</LinearLayout>
