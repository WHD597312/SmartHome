<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_100"
        android:background="@mipmap/popup_back"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        >
        <RelativeLayout
            android:id="@+id/rl_heater"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            >
            <ImageView
                android:id="@+id/iv_rename_r1"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/heater2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="centerInside"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_rename_r1"
                android:layout_alignTop="@+id/iv_rename_r1"
                android:layout_alignBottom="@+id/iv_rename_r1"
                android:layout_centerVertical="true"
                android:id="@+id/tv_rname_r1"
                android:gravity="center"
                android:text="取暖器配置教程"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/rl_heater"
            />
        <RelativeLayout
            android:id="@+id/rl_sensor"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_3"
            >
            <ImageView
                android:id="@+id/iv_del_r1"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@mipmap/estsensor"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_del_r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_del_r1"
                android:layout_alignTop="@+id/iv_del_r1"
                android:layout_alignBottom="@+id/iv_del_r1"
                android:text="智能终端配置教程"
                android:gravity="center"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
