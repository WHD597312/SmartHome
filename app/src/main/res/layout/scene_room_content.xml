<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/RoomView"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:clickable="true"
    android:longClickable="true"
    android:background="@drawable/mergeroom_background"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/room_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浴室" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/room_changtype"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_name_ll"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/extTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_10"
                android:gravity="center_horizontal"
                android:text="" />

            <TextView
                android:id="@+id/extHut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_10"
                android:gravity="center_horizontal"
                android:text="" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/room_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:longClickable="false"
        android:layout_above="@+id/rl1"
        android:layout_below="@+id/message">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/scene_device_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        tools:ignore="ObsoleteLayoutParam">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/add_equipment"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_25"
                android:scaleType="centerInside"
                android:src="@drawable/add_equment" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>

